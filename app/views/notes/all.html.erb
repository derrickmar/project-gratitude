<div id="show-note-popup-btn" class="hidden animated">+</div>
<div class="notes-holder clearfix">
    <!-- <div class="grid-sizer"></div> -->
    <% @notes.each do |n| %>
    <!-- id: "note-link" + n.id.to_s, -->
    <%= link_to n, class: 'note-holder-link', remote: true do %>
        <div class="note-holder"  id="<%= 'note' + n.id.to_s %>">
            <% if !n.images.empty? %>
                <div class="note-image">
                    <% n.images.each do |image| %>
                        <%= image_tag image.pic.url(:medium) %>
                    <% end %>
                </div>
            <% end %>
            <div class='note'>
                <%= n.desc %>
            </div>
        </div>
        <% end %>
    <% end %>
</div>
<div class="note-pagination-links hidden">
    <%= paginate @notes %>
</div>

<%= render partial: "modals/home", layout: "modals/modal_layout",
    locals: { modalID: "home-modal",  modalBodyID: "home-modal-body"} %>
<%= render partial: "modals/create", layout: "modals/modal_layout",
    locals: { modalID: "create-modal",  modalBodyID: "create-modal-body"} %>
<%= render partial: "modals/show_note", layout: "modals/modal_layout",
    locals: { modalID: "show-note-modal", modalBodyID: "share-note-modal-body"} %>
<%= render partial: "modals/share", layout: "modals/modal_layout",
    locals: { modalID: "share-modal", modalBodyID: "share-modal-body"} %>
