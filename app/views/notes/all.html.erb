<div class="masonry text-center container-fluid">
    <div class="row notes-holder">
    	<% @notes.each do |n| %>
            <%= link_to(n, class: "col-md-3 col-sm-4 col-xs-12 note-holder", remote: true) do %>
                <div class="note-image">
                    <% n.images.each do |image| %>
        				<%= image_tag image.pic.url(:medium) %>
        			<% end %>
                </div>
                <div class='note'>
                    <%= n.desc %>
                </div>
            <% end %>
      <% end %>
    </div>
</div>
