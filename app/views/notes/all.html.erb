<div class="notes-holder">
    <!-- <div class="grid-sizer"></div> -->
    <% @notes.each do |n| %>
    <div class="note-holder">
        <%= link_to(n, remote: true) do %>
        <% if !n.images.empty? %>
        <div class="note-image">
            <% n.images.each do |image| %>
            <%= image_tag image.pic.url(:medium) %>
            <% end %>
        </div>
        <% end %>
        <div class='note'>
            <%= n.desc %>
        </div>
        <% end %>
        <div class="note-buttons">
           <%= render_shareable :url=> "request.original_url + note_path(n)", :buttons=> ['twitter', 'facebook', 'tumblr'] %>
        </div>
    </div>
    <% end %>
</div>
<%= render 'modals/home' %>
<%= render 'modals/create' %>
<%= render 'modals/show_note' %>

