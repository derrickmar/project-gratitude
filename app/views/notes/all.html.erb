<div class="container">
    <div class="col-xs-12 text-center">
        <h1>Project Gratitude</h1>
    </div>
    <div class="masonry text-center container-fluid">
        <div class="row notes-holder">
        	<% @notes.each do |n| %>
            <div class="col-md-3 col-sm-4 col-xs-12 note-holder item">
                <% n.images.each do |image| %>
					<%= image_tag image.pic.url(:medium) %>
				<% end %>
                <div class='note'>
                   <%= n.desc %>
                </div>
                <div class="info text-left">
                    <i class="fa fa-heart-o heart"></i>
                </div>
            </div>
          <% end %>
        </div>
  </div>
</div>