<%= @note.desc %>
<% @note.images.each do |image| %>
<%= image_tag image.pic.url(:thumb) %>
<% end %>
<h2> Comments </h2>
<ul>
  <% @note.comments.each do |c| %>
  <li> <%= c.desc %> --> By <%= c.user.name %> </li>
  <% end %>
</ul>

<h2> Add a comment </h2>
<%= form_for Comment.new do |f| %>
Description: <%= f.text_area :desc %>
<%= f.hidden_field :note_id, :value => @note.id %>
<%= f.submit "Add Comment" %>
<% end %>