<div class="row text-center">
	<div class="crop-holder">
		<div class="header"> Crop your picture </div>
		<%= form_for(@user, url: update_profile_pic_user_path(@user), html: { method: :patch, :multipart => true }) do |f| %>
				<%= f.hidden_field :cropping, value: true %>
		    <%= f.cropbox :avatar, width: 300 %>
		    <%= f.submit 'Save', class: "btn btn-primary" %>
		<% end %>
	</div>
</div>