<h2>Edit Your Profile</h2>
<div class="row authentication-holder registrations">

  <div class="authentication-box col-md-4 col-xs-12">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="form-group">
      <%= f.label :name, class: "control-label col-xs-3" %>
      <div class="col-xs-9">
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
          <%= f.label :email, class: "control-label col-xs-3" %>
          <div class="col-xs-9">
            <%= f.email_field :email, class: "form-control" %>
          </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
        <%= f.label :password, class: "control-label col-xs-3 label-small" %>
        <div class="col-xs-9">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "control-label col-xs-3 label-small" %>
      <div class="col-xs-9">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
  
    <div class="form-group">
      <%= f.label :current_password, class: "control-label col-xs-3 label-small" %>
      <i>(we need your current password to confirm your changes)</i>
      <div class="col-xs-9">
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

     <div class="form-group">
          <div class="col-xs-offset-3 col-xs-3">
              <%= f.submit "Save changes", class: "btn btn-primary" %>
          </div>
      </div>
  <% end %>
  </div>

  <div class="authentication-box col-md-4 col-xs-12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :multipart => true }) do |f| %>
       <div class="field">
          <%= f.label :avatar %><br />
          <%= f.file_field :avatar %>
        </div>

        <div class="form-group">
            <div class="col-xs-offset-3 col-xs-3">
                <%= f.submit "Save changes", class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>
  </div>


  <h3>Cancel my account</h3>
  <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>