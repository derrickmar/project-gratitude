<% content_for :modal_header do %>
  <button type="button" class="close" data-dismiss="modal">
    <span aria-hidden="true">&times;</span>
    <span class="sr-only">Close</span>
  </button>
  <h1 class="modal-title text-center" id="home-modal-title">You're Awesome</h1>
  <h3 class='text-center'>Take 30 seconds and write a short note.</h3>
  <hr>
<% end %>

<% content_for :modal_body do %>
  <div class="col-sm-8">
    <h4> Add an image (optional) </h4>
    <%= form_for @note, url: { action: 'create' },
    :html => { :multipart => true, class: 'form-group' }, remote: true do |f| %>
    <%= f.text_area :desc, class: 'form-control create', rows: '3', placeholder: "I'm grateful for...", maxlength: '250'%><br />
    <%= hidden_field_tag 'image_id_for_note', '' %>
    <%= f.submit "Spread the gratitude", class: 'btn col-xs-10 col-xs-offset-1 cta', id: 'create-note-button' %>
    <% end %>
  </div>
  <div class="col-sm-4">
    <h4> Add an image (optional) </h4>
    <div class="alert-error" id="image-error"> </div>
    <%= form_for(Image.new, html: { multipart: true, id: 'image_upload', class: "dropzone"}) do |f|  %>
    <div class="fallback">
      <%= f.file_field :image %><br>
      <%= f.submit "Upload" %>
    </div>
    <% end %>
  </div>
  <div class="num-chars">250</div>
<% end %>

