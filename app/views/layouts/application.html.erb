<!DOCTYPE html>
<html>
<head>
  <title>Gratitude</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta property="og:title" content="Project Gratitude"/>
  <meta property="og:site_name" content="Project Gratitude"/>
  <meta property="og:url" content="<%= request.base_url %>" />
  <meta property="og:description" content="Because life is a f*cking miracle" />
  <meta property="fb:app_id" content="1503557093265232" />
</head>
<body>
  <div id="fb-root"></div>
  <%= render 'shared/header' %>

  <div class="container body-holder">
    <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <a href="#" data-dismiss="alert" class="close">Ã—</a>
      <ul>
        <li>
          <%= value %>
        </li>
      </ul>
    </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
